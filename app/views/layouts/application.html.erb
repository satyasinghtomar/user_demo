<!DOCTYPE html>
<html>
  <head>
    <title>UsersDemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header">
      <div class="container">

        <div id="logo" class="pull-left">
          <a href="<%= root_path %>"><%= image_tag 'logo.png' %></a>
          <!-- Uncomment below if you prefer to use a text logo -->
          <!--<h1><a href="#hero">Regna</a></h1>-->
        </div>

        <nav id="nav-menu-container">
          <ul class="nav-menu">
            <li class="menu-active"><a href="<%= root_path %>">Home</a></li>
            <%if user_signed_in? %>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Log in", new_session_path(User) %><br /></li>
              <li><%= link_to "Sign up", new_registration_path(User) %><br /></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <main id="main">
      <%= notice if notice.present? %>
      <%= alert if alert.present?%>
      <%= yield %>
    </main>
  </body>
</html>
